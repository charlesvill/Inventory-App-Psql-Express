<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head'); %>
</head>
<body>
    <header>
        <%- include('./partials/header.ejs'); %>
    </header>

    <main>
        <div class="profileCont">
            <h3><%= data.model.name %> - <%= data.related.name%></h3>
            <img src="<%=data.model.img_url %>">
            <p><%= data.model.description %></p>
            <ul>
                <li><%= data.related.terrain%></li>
                <li><%= data.related.scale%></li>
            </ul>
            <form action="/cars/edit/<%= data.model.id%>" method="get">
                <button type="submit">
                    edit
                </button>
            </form>
        </div>
    </main>

    <footer>
        <%- include('./partials/footer'); %>
    </footer>

</body>
</html>

